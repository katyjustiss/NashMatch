.jumbotron.center-content
  h1 Possible Opponents

  .search
    label Search for opponents
    input(placeholder="Enter search term", ng-model="query")

.all-members
  .player_container
    .new_player(ng-repeat="(id, person) in player.people | objToArr | orderBy:'name' | filter:query")
      a(href="#/people/{{person._id}}")
        img.picture.thumbnail(ng-src="{{person.photo}}")
        p {{person.name}}




